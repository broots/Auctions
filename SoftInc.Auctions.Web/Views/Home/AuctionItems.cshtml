@model IEnumerable<SoftInc.Auctions.Web.Models.ItemModel>

@{
    ViewBag.Title = "Auction Items";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Auction Items</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemSummary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReservePrice)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemSummary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservePrice)
                    </td>
                    <td>
                        @Html.ActionLink("Bid", "Bidding", new { id = item.Id }, new { @class = "" }) 
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
